{
  "name": "graphql-resolvers-example",
  "version": "1.0.0",
  "description": "Example GraphQL server implementation that automatically solves n+1",
  "author": "Marcin Matuszczyk (Scthe)",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "postinstall": "echo husky install",
    "start": "ts-node-dev -r tsconfig-paths/register --respawn ./src/index.ts",
    "build": "rm -rf dist && tsc -p tsconfig.json",
    "generate:gql-types": "graphql-codegen --config codegen.yml",
    "gen": "yarn generate:gql-types",
    "prettier": "prettier --write src",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "test": "jest --verbose",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "apollo-server": "^2.23.0",
    "apollo-server-express": "^2.23.0",
    "chalk": "^4.1.0",
    "dataloader": "^2.0.0",
    "deepmerge": "^4.2.2",
    "express": "^4.17.1",
    "glob": "^7.1.6",
    "graphql": "^15.5.0",
    "node-fetch": "^2.6.1",
    "object-hash": "^2.1.1"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "1.21.3",
    "@graphql-codegen/typescript": "1.21.1",
    "@graphql-codegen/typescript-resolvers": "^1.19.0",
    "@types/deepmerge": "^2.2.0",
    "@types/express": "^4.17.11",
    "@types/glob": "^7.1.3",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.40",
    "@types/node-fetch": "^2.5.10",
    "@types/object-hash": "^2.1.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "apollo-datasource": "^0.8.0",
    "apollo-server-plugin-base": "^0.11.0",
    "eslint": "^7.24.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "nock": "^13.0.11",
    "node-ts": "^5.1.1",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.5",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4"
  }
}
